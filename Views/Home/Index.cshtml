@{
    ViewData["Title"] = "Home Page";
}

<div style="position: relative; height: 100vh; overflow: hidden;">
    <!-- 背景视频 -->
    <video autoplay muted loop playsinline
           style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: -1;">
        <source src="/nightskyline.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>

    <!-- 前景内容 -->
    <div style="position: relative; z-index: 1; text-align: center; top: 40%; transform: translateY(-50%); color: white;">
        <h1 class="hero-title">S&amp;A Agent</h1>

        <h4 class="hero-subtitle">
            Your Reliable Partner in Every Property Journey.
        </h4>

        <a asp-controller="Property" asp-action="List" class="btn btn-light mt-3" 
           style="padding: 10px 20px; font-size: 18px;">
            Explore
        </a>
    </div>
</div>
